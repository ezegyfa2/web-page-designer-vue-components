form-item-with-label.form-group.array(
    v-bind:label='label'
    v-bind:validation_errors='validation_errors'
)
    div(
        v-bind:id='formItemId'
    )
        create-icon-link.create-button(
            content='Add'
            icon_class='fas fa-plus'
            v-on:on_click='() => { createItem() }'
        )
        div(v-if='value')
            div.array-item(v-for='valueIndex in value.length')
                delete-icon-link(
                    v-on:on_click='() => { deleteItem(valueIndex) }'
                )
                component.array-item-form(
                    v-bind:is='currentItemType'
                    v-bind:value.sync='value[valueIndex - 1]'
                    v-bind:saved_template_names='saved_template_names'
                    v-on:updated:value='(newValue) => { updateValue(newValue, valueIndex - 1) }'
                    v-on:sectionSelected='(newSectionType) => { changeSection(newSectionType, valueIndex - 1) }'
                    v-on:sectionLoaded='(newSection) => { loadSection(newSection, valueIndex - 1) }'
                )
