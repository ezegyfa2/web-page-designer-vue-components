form-item-with-label.form-group.array(
    v-bind:label='label'
    v-bind:validation_errors='validation_errors'
)
    div(
        v-bind:id='formItemId'
    )
        create-icon-link.create-button(
            content='Add'
            icon_class='fas fa-plus'
            v-bind:on_click='() => { createItem() }'
        )
        div(v-if='itemValues')
            div.array-item(v-for='valueIndex in itemValues.length')
                delete-icon-link(
                    v-bind:on_click='() => { deleteItem(valueIndex) }'
                )
                component.array-item-form(
                    v-bind:is='currentItemType'
                    v-bind:value.sync='itemValues[valueIndex - 1]'
                    @sectionSelected='(newSectionType) => { changeSection(newSectionType, valueIndex - 1) }'
                )
