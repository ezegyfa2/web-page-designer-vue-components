form-item-with-label.flex-column.section(
    v-bind:label='label'
    v-bind:validation_errors='validation_errors'
)
    .mb-3.d-flex
        create-icon-link.create-button.create-button-margin-left(
            content='Paste selected sections'
            @click='pasteSelectedTemplates'
        )
    vue-select.mb-3(
        v-bind:value.sync='currentSectionType'
        v-bind:options='componentNameOptions'
    )
    .d-flex.mb-3
        vue-select.me-3(
            v-bind:value.sync='selectedTemplateToLoad'
            v-bind:options='savedTemplateNamesOptions'
        )
        create-icon-link.create-button(
            content='Load'
            v-on:on_click='loadTemplate'
        )
